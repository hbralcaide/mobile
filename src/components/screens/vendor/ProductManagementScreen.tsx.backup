      // Get current vendor profile first
      const vendorProfile = currentVendorProfile || await getCurrentVendorProfile();
      if (!vendorProfile) {
        setError('Unable to load vendor profile. Please login again.');
        setProducts([]);
        setLoading(false);
        return;
